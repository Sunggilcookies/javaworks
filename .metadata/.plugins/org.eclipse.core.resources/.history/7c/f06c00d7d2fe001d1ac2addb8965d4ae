package abstractex.car;

public class CarName {
	public static void main(String[] args) {
		//부모타입으로 다양상 이뤄짐 
		//Car -> Bus에게 상속
		//버스의 승객은 안보임
		//부모 타입으로 bus 객체 생성(자동형변환)
		Car car = new Bus();
		Car car2 = new Truck();
		
		car.run();
		car.refuel();
		
		car2.run();
		car2.refuel();
		car2.load();
		
		// 다운 캐스팅 (강제 형변환 - instanceof)
		// bus가 Bus의 자식객체가 맞는지 확인
		if(car instanceof Bus) {
			Bus bus = (Bus)car;
			bus.takePassenger();
		}
		if(car instanceof Bus) {
			Truck Truck = (Truck)car2;
			Truck.load();
			
			
			
			
		}
		
	}

}
