package transport;

import taketrans.Bus;
import taketrans.Subway;

//사람 클래스(참조 자료형)
public class Person extends Vehicle{
	
	String name;
	int age;
	int money; //가진돈
	
	
	Person(String name, int money){
		this.name = name;
		this.money = money;
		
	}
	
	
	
	
	
	
	//버스를 타는 기능을 하는 메서드
	//매개변수 - 자료형 변수 이름
	void takeBus(Bus bus) {
		bus.take(1300);
		this.money -= 1300;
	}
	
	//지하철을 타다
	void takeSubway(Subway subway) {
		subway.take(1250);
		this.money -=1250;
	}
	
	//요금을 내고 교통수단을 이용하는 메서드
	//VEhicle vehicle ->상속과 다형성 이용
	public void take(Vehicle vehicle, int fee) {
		vehicle.carry(fee);
		this.money -= fee; //가진돈에서 요금만큼 차단
	}
	//사람의 정보 
	void showInfo() {
		System.out.printf("%s님의 남은 요금은 %d입니다.", name,money);
	}
	
	//void takeBus();
	//void showInfo();
	
}
